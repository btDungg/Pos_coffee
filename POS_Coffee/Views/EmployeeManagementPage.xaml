<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_Coffee.Views.EmployeeManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_Coffee.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Width="Auto" Height="Auto" Background="FloralWhite" Margin="10 10 10 10">
        <TextBlock Text="QUẢN LÝ NHÂN VIÊN" FontSize="25" Margin="0,10,0,0" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Center"/>
        <!--<Button Command="{x:Bind ViewModel.ShowDetailCommand}">-->
        <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 490 0">
                <TextBox Width="400" Height="35" PlaceholderText="Tìm nhân viên" Margin="10,0,0,0" Text="{x:Bind EmployeeViewModel.SearchQuery, Mode=TwoWay}"/>
                <Button Content="Search" Height="35" Margin="10,0,0,0" Command="{x:Bind EmployeeViewModel.SearchButtonClickCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Thêm nhân viên" Command="{x:Bind EmployeeViewModel.AddEmployeeCommand}" Margin="10 10 10 10" HorizontalAlignment="Right" Background="#3498eb"></Button>
                <Button Content="Xem bảng lương" Command="{x:Bind EmployeeViewModel.SalaryListCommand}" Margin="10 10 10 10" HorizontalAlignment="Right" Background="#3498eb"></Button>
            </StackPanel>

        </StackPanel>
        <controls:DataGrid x:Name="detailTable"
            GridLinesVisibility="All" VerticalAlignment="Top"
            IsReadOnly="True" SelectedItem="{x:Bind EmployeeViewModel.SelectedEmployee, Mode=TwoWay}"
            Margin="10" MaxHeight="500" SelectionMode="Single"
            AutoGenerateColumns="False" 
            ItemsSource="{x:Bind EmployeeViewModel._employees, Mode=TwoWay}"
            DataContext="{x:Bind EmployeeViewModel}">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn 
                Header="Mã nhân viên" 
                Width="*"
                Binding="{Binding Id}" 
                FontSize="14" />
                <controls:DataGridTextColumn 
                Header="Tên đăng nhập" 
                Width="*"
                Binding="{Binding username}" 
                FontSize="14" />
                <controls:DataGridTextColumn 
                Header="Họ và tên" 
                Width="*"
                Binding="{Binding name}" 
                FontSize="14" />
                <controls:DataGridTextColumn 
                Header="Số điện thoại" 
                Width="*"
                Binding="{Binding phone}" 
                FontSize="14" />
                <controls:DataGridTextColumn 
                Header="Email" 
                Width="*"
                Binding="{Binding email}" 
                FontSize="14" />
                <controls:DataGridTextColumn 
                Header="Địa chỉ" 
                Width="*"
                Binding="{Binding address}" 
                FontSize="14" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
        <Button Content="Xóa" Command="{x:Bind EmployeeViewModel.DeleteEmployeeCommand}" Margin="10 10 10 10" HorizontalAlignment="Right" Background="#e81010"></Button>
    </StackPanel>
</Page>
