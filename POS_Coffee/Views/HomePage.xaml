                    <Button Content="Thanh to√°n" Command="{x:Bind CartItemsViewModel.NavigateToPaymentCommand}"
                            Height="50" Width="200" Background="Green" Foreground="White" CornerRadius="20" FontSize="18" FontWeight="Bold"/>
