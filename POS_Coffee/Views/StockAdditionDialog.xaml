<ContentDialog
    x:Class="POS_Coffee.Views.StockAdditionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:POS_Coffee.Models"
    xmlns:viewmodels="using:POS_Coffee.ViewModels"
    mc:Ignorable="d"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary">
    

    <StackPanel Height="400" Width="500">
        <TextBlock  Text="THÊM NGUYÊN LIỆU" FontWeight="Bold" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical">
            <!--<Image 
                x:Name="StockImage" 
                MaxWidth="1000" Height="320" Margin="0 10 10 10" 
                Stretch="Uniform" HorizontalAlignment="Left" 
                Source="{Binding AddedStock.ImagePath, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>-->
            <Button x:Name="UploadButton" Width="125" Height="35" Content="Upload Image" Foreground="Blue" 
                    FontWeight="Bold" CornerRadius="0" Command="{x:Bind ViewModel.UploadImageClickCmd}"/>
        </StackPanel>
        
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <TextBlock x:Name="NameTitle" Text="Tên nguyên liệu:" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Margin="0 5 0 0" Height="50"/>
            <TextBlock x:Name="DescriptionTitle" Text="Mô tả:" FontWeight="Bold" Grid.Column="0" Grid.Row="1" Margin="0 5 0 0" Height="50"/>
            <TextBlock x:Name="UnitTitle" Text="Đơn vị:" FontWeight="Bold" Grid.Column="0" Grid.Row="2" Margin="0 5 0 0" Height="50"/>
            <TextBlock x:Name="PriceTitle" Text="Đơn giá:" FontWeight="Bold" Grid.Column="0" Grid.Row="3" Margin="0 5 0 0" Height="50"/>
            <TextBlock x:Name="StockNumberTitle" Text="Số lượng tồn:" FontWeight="Bold" Grid.Column="0" Grid.Row="4" Margin="0 5 0 0" Height="50"/>

            <TextBox x:Name="NameAddition" Text="{Binding AddedStock.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" Grid.Column="1" Grid.Row="0" Height="50"/>
            <TextBox x:Name="DescriptionAddition" Text="{Binding AddedStock.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" Grid.Column="1" Grid.Row="1" Height="50"/>
            <TextBox x:Name="UnitAddition" Text="{Binding AddedStock.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" Grid.Column="1" Grid.Row="2" Height="50"/>
            <TextBox x:Name="PriceAddition" Text="{Binding AddedStock.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" Grid.Column="1" Grid.Row="3" Height="50"/>
            <TextBox x:Name="StockNumberAddition" Text="{Binding AddedStock.StockNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" Grid.Column="1" Grid.Row="4" Height="50"/>
        </Grid>
    </StackPanel>
        
</ContentDialog>
